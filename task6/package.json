    "test:module-10-production-ready-app": "jest --testPathPattern=./src/test/module-10-production-ready-app",
    "pretest": "npm start",
    "posttest": "npm stop",
    "lint": "./node_modules/.bin/eslint .",
    "lint:fix": "npm run lint --fix"
  },
